{
	"name" : "Platypus",
	"id" : "com.gopherwoodstudios.platypus",
	"version" : "0.4.0",
	"github": "Gopherwood/PlatypusSpringRollTemplate",
	"rename" : {
		"gitignore" : ".gitignore",
		"bowerrc" : ".bowerrc",
		"project.md": "README.md",
		"bower": "bower.json"
	},
	"extend": "io.springroll.default",
	"required": ["core", "platypus"],
	"modules": [
		{
			"id": "platypus",
			"name": "Platypus Game Engine",
			"description": "An HTML5 2D tile-based game framework.",
			"main": [
				"components/platypus/lib/platypus-0.4.0.min.js",
				"components/platypus/lib/platypus-0.4.0.min.css"
			],
			"mainDebug": [
				"components/platypus/lib/platypus-0.4.0.combined.js",
				"components/platypus/lib/platypus-0.4.0.combined.css"
			],
			"bower": {
				"platypus": "https://github.com/gopherwood/Platypus.git#simplified"
			},
			"default": true
		}
	]
}
